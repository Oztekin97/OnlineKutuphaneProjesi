@model MessageModel
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor

@{
    Layout = "_UserLayout";
}

<link href="~/Css/contact1.css" rel="stylesheet" />
<link href="~/Css/contact-information1.css" rel="stylesheet" />

<h1 class="text-center pt-3" style="color: crimson">İLETİŞİM</h1>

<div class="contact-info" style="background-color:antiquewhite">
    <div class="contact-card">
        <i class="contact-icon fas fa-envelope" ></i>
        <div class="card-content" >
            <h3>EMAIL</h3>
            <span>a.oztkn98@gmail.com</span>
        </div>
    </div>

    <div class="contact-card" style="background-color:aquamarine">
        <i class="contact-icon fas fa-phone"></i>
        <div class="card-content" >
            <h3>TELEFON</h3>
            <span>0553 857 62 48</span>
        </div>
    </div>

    <div class="contact-card" style="background-color:brown">
        <i class="contact-icon fas fa-map-marker-alt"></i>
        <div class="card-content" >
            <h3>KONUM</h3>
            <span>Ankara-Yenimahalle</span>
        </div>
    </div>
</div>

<hr style="color: #E0AAFF" />

<h1 class="mt-5 text-center" style="color: coral">MESAJ GÖNDER</h1>

<form class="contact-form pb-5" asp-action="Contact" asp-controller="User" method="post" style="background-color:gold">
    <input type="text" class="contact-form-text" value="@HttpContextAccessor.HttpContext.Session.GetString("name")" readonly style="background-color:indigo" />
    <input type="text" class="contact-form-text" value="@HttpContextAccessor.HttpContext.Session.GetString("lastname")" readonly style="background-color:indigo" />
    <textarea asp-for="Message.Text" class="contact-form-text" maxlength="500" placeholder="Mesajınız (max 500)" style="background-color:hotpink"></textarea>
    <span class="form-text text-danger" asp-validation-for="Message.Text" style="background-color:orangered"></span>
    <input type="submit" class="contact-form-btn" value="Gönder"  />
</form>